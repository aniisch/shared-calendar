# ===========================================
# DATABASE
# ===========================================
DATABASE_URL="postgresql://user:password@localhost:5432/shared_calendar?schema=public"

# ===========================================
# NEXTAUTH
# ===========================================
# URL de base de l'application
NEXTAUTH_URL="http://localhost:3000"

# Secret pour chiffrer les sessions (générer avec: openssl rand -base64 32)
NEXTAUTH_SECRET="your-super-secret-key-here"

# ===========================================
# GOOGLE OAUTH
# ===========================================
# Créer sur https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# ===========================================
# EMAIL / SMTP
# ===========================================
# Configuration de ton serveur SMTP existant
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="noreply@example.com"
SMTP_PASSWORD="your-smtp-password"
SMTP_SECURE="false"

# Adresse d'expéditeur
EMAIL_FROM="Calendrier Couple <noreply@example.com>"

# ===========================================
# OPTIONAL - PUSHER (Real-time)
# ===========================================
# Pour les notifications temps réel (optionnel)
# PUSHER_APP_ID="your-pusher-app-id"
# PUSHER_KEY="your-pusher-key"
# PUSHER_SECRET="your-pusher-secret"
# PUSHER_CLUSTER="eu"
# NEXT_PUBLIC_PUSHER_KEY="your-pusher-key"
# NEXT_PUBLIC_PUSHER_CLUSTER="eu"
